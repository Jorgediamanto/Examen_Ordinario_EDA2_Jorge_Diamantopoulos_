from . import usar_la_fuerza
import pytest

def test_usar_la_fuerza():
    mochila = ["comunicador", "pistola láser", "sable de luz", "rations"]
    assert usar_la_fuerza(mochila) == (True, 2)

    mochila = ["comunicador", "pistola láser", "rations"]
    assert usar_la_fuerza(mochila) == (False, 3)

    mochila = ["sable de luz"]
    assert usar_la_fuerza(mochila) == (True, 0)


pytest.main()
